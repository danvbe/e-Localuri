{% extends 'LocaluriDictionaryBundle::backend.html.twig' %}
{% block body %}

<h1>Dictionary list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Type</th>
            <th>Value</th>
            <th>Description</th>
            <th>Created_at</th>
            <th>Updated_at</th>
            <th>Expired_at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_dictionary_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.type }}</td>
            <td>{{ entity.value }}</td>
            <td>{{ entity.description }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_dictionary_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_dictionary_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_dictionary_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock body %}